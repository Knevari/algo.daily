# Database (Prisma)
# Connect to your PostgreSQL database (e.g., Neon, Supabase, Railway)
DATABASE_URL="postgresql://user:password@host:5432/algodaily?schema=public"

# Next Auth
# URL of your deployment (e.g., https://algodaily.com)
NEXTAUTH_URL="http://localhost:3000"
# key to encrypt session (generate with `openssl rand -base64 32`)
NEXTAUTH_SECRET="supersecret"

# GitHub OAuth
# Create an OAuth App in GitHub Developer Settings
GITHUB_CLIENT_ID="your_github_client_id"
GITHUB_CLIENT_SECRET="your_github_client_secret"

# Stripe (Payments)
# Secret key from Stripe Dashboard -> Developers -> API Keys
STRIPE_SECRET_KEY="sk_test_..."
# Product Price IDs (Create products in Stripe Dashboard)
STRIPE_MONTHLY_PRICE_ID="price_..."
STRIPE_LIFETIME_PRICE_ID="price_..."
# Webhook Secret (if using webhooks for async payment confirmation)
STRIPE_WEBHOOK_SECRET="whsec_..."

# Google Gemini (AI Hints)
# Get API Key from Google AI Studio
GEMINI_API_KEY="your_gemini_api_key"

# Web Push Notifications (VAPID)
# Generate keys: `npx web-push generate-vapid-keys`
VAPID_PUBLIC_KEY="your_vapid_public_key"
VAPID_PRIVATE_KEY="your_vapid_private_key"
VAPID_EMAIL="admin@yourdomain.com"

# Cron Jobs (Daily Reminders)
# Secret shared with your cron scheduler (e.g., Vercel Cron)
CRON_SECRET="your_cron_secret"

# Piston (Code Execution)
# Optional: URL to your self-hosted Piston instance. Defaults to public API if unset.
# NEXT_PUBLIC_PISTON_API_URL="https://piston.yourdomain.com"
